    <script>
        var imageDefault = { 1: "/Uploads/images/no-avartar.png", 2: "/img/site/no-agent.png" }
        function imgError(o, imgDefault) {
            if (imgDefault) {
                o.src = imageDefault[imgDefault];
            } else {
                o.src = imageDefault[2];
